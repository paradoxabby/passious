<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EntrePersonalDetailsStep2Activity">


    <TextView
        android:id="@+id/entre_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Entrepreneur"
        android:textColor="#75B8C8"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Narrow your field of interest in entrepreneurship. So people can find you easily."
        android:textSize="18sp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entre_text" />


    <Spinner
        android:id="@+id/entre_passion_parent_spinner"
        android:layout_width="345dp"
        android:layout_height="55dp"
        android:spinnerMode="dialog"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Spinner
        android:id="@+id/entre_passion_child_spinner"
        android:layout_width="345dp"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:spinnerMode="dialog"
        app:layout_constraintEnd_toEndOf="@+id/entre_passion_parent_spinner"
        app:layout_constraintStart_toStartOf="@+id/entre_passion_parent_spinner"
        app:layout_constraintTop_toBottomOf="@+id/entre_passion_parent_spinner" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="Please tell us what's your field of interest in 2-3 words"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/entre_passion_parent_spinner"
        app:layout_constraintStart_toStartOf="@+id/entre_passion_parent_spinner"
        app:layout_constraintTop_toBottomOf="@+id/entre_passion_parent_spinner" />

    <EditText
        android:id="@+id/entre_other_passion"
        android:layout_width="345dp"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rectangular_rounded_textbox"
        android:hint="What's your Profession"
        android:inputType="text"
        android:padding="10dp"
        android:spinnerMode="dialog"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/entre_passion_parent_spinner"
        app:layout_constraintStart_toStartOf="@+id/entre_passion_parent_spinner"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


    <Button

        android:id="@+id/register_btn"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_buttons"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/entre_passion_parent_spinner"
        app:layout_constraintStart_toStartOf="@+id/entre_passion_parent_spinner"
        app:layout_constraintTop_toBottomOf="@id/entre_other_passion" />


</androidx.constraintlayout.widget.ConstraintLayout>